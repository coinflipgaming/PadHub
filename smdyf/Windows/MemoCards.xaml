<Window x:Class="smdyf.Windows.MemoCards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        Title="MemoCards" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="40px"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Name="container" ShowGridLines="True">
            
        </Grid>
        <Button Click="Button_Powrot">Powrot</Button>
        <Button Grid.Row="4" Grid.Column="1" Name="new_game_button">Nowa Gra</Button>
        <Label Grid.Row="4" Grid.Column="2" Name="points"></Label>
        <ProgressBar Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Minimum="0" Value="0" Name="progressbar"/>
    </Grid>
</Window>
